// For more details, see https://aka.ms/devcontainer.json.
{
    "name": "Google Pay",
    "workspaceFolder": "/workspaces/${localWorkspaceFolderBasename}/advanced-integration/",
    "image": "mcr.microsoft.com/devcontainers/javascript-node:20",
    "postCreateCommand": "npm install",
    "postAttachCommand": {
      "Start server": "CI=true npx kill-port --yes 8888 && npm start"
    },
    "forwardPorts": [
      8888
    ],
    "portsAttributes": {
      "8888": {
        "label": "Preview of Google Pay Flow",
        "onAutoForward": "openPreview"
      }
    },
    "secrets": {
      "CLIENT_ID": {
        "description": "Sandbox client ID of the application.",
        "documentationUrl": "https://developer.paypal.com/dashboard/applications/sandbox"
      },
      "APP_SECRET": {
        "description": "Sandbox secret of the application.",
        "documentationUrl": "https://developer.paypal.com/dashboard/applications/sandbox"
      },
      "MERCHANT_ID":{
        "description": "Sandbox merchant ID of the application.",
        "documentationUrl": "https://developer.paypal.com/dashboard/applications/sandbox"
      }
    },
    "containerEnv": {
        "BASE_URL": "https://api-m.sandbox.paypal.com"
    },
    "customizations": {
      "vscode": {
        "extensions": [
          "vsls-contrib.codetour"
        ],
        "settings": {
          "git.openRepositoryInParentFolders": "always",
          "files.exclude": {
            "**/.devcontainer": true
          }
        }
      }
    }
  }